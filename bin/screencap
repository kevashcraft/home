#!/bin/bash
screencap=kscreen-$(date -Iseconds).mkv
ffmpeg -f x11grab -video_size 3840x2160 -framerate 30 -i :0.0 \
-f v4l2 -video_size 1280x720 -framerate 30 -i /dev/video0 \
-f alsa -ac 2 -i hw:0,0 -filter_complex \
"[0:v]setpts=PTS-STARTPTS[bg]; \
 [1:v]setpts=PTS-STARTPTS[fg]; \
 [bg][fg]overlay=W-w-10:10,format=yuv420p[out]" \
-map "[out]" -map 2:a -c:v libx264 -preset veryfast \
-maxrate 3000k -bufsize 4000k -c:a aac -b:a 160k -ar 44100 \
-g 30 \
/home/kevin/Documents/screencaps/$screencap

echo "/home/kevin/Documents/screencaps/$screencap"

